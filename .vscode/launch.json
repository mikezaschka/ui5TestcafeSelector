{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nightcafe",
            "program": "${workspaceRoot}/node_modules/testcafe/bin/testcafe.js",
            "stopOnEntry": false,
            "args": [
                "chrome",
                "${file}",
                "--selector-timeout",
                "500000",
                "--skip-uncaught-errors"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}